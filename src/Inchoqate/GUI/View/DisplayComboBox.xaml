<UserControl x:Class="Inchoqate.GUI.View.DisplayComboBox"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:local="clr-namespace:Inchoqate.GUI.View"
              mc:Ignorable="d"
              d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:NameSelector x:Key="NameSelector"/>
        <local:ControlSelector x:Key="ControlSelector"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ComboBox
            x:Name="ComboBox"
            Grid.Row="0"
            ItemsSource="{Binding Path=Items, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource NameSelector}}"
            SelectionChanged="ComboBox_OnSelectionChanged"/>
        
        <ContentPresenter
            x:Name="ContentPresenter"
            Grid.Row="1"
            Content="{Binding Path=SelectedItem, RelativeSource={RelativeSource Mode=Self}, Converter={StaticResource ControlSelector}}"/>

    </Grid>
</UserControl>