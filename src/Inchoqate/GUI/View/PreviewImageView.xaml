<UserControl 
    x:Class="Inchoqate.GUI.View.PreviewImageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:gl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Inchoqate.GUI.View"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800"
    x:Name="This"
    HorizontalAlignment="Center"
    VerticalAlignment="Center">

    <gl:GLWpfControl 
        x:Name="GLImage"
        Render="OpenTK_OnRender"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Width="{Binding Path=ActualWidth, ElementName=This}"
        Height="{Binding Path=ActualHeight, ElementName=This}"/>
    
</UserControl>
