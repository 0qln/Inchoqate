<UserControl x:Class="GUI.Titlebar.ActionButtonOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GUI.Titlebar"
             mc:Ignorable="d" 
             d:DesignHeight="30">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="Col_Icon"/>
            <ColumnDefinition x:Name="Col_Name"/>
            <ColumnDefinition x:Name="Col_Shortcut"/>
            <ColumnDefinition x:Name="Col_Indicator"/>
        </Grid.ColumnDefinitions>
            
    </Grid>
</UserControl>
