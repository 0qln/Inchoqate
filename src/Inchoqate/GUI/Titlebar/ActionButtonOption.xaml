<UserControl x:Class="Inchoqate.GUI.Titlebar.ActionButtonOption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inchoqate.GUI.Titlebar"
             mc:Ignorable="d" 
             x:Name="E_This"
             d:DesignHeight="30" d:DesignWidth="150">

    <Button x:Name="E_Button"
            Command="{Binding Path=Command, ElementName=E_This}">
        
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="Col_Icon"/>
                <ColumnDefinition x:Name="Col_Title"/>
                <ColumnDefinition x:Name="Col_Shortcut"/>
                <ColumnDefinition x:Name="Col_Indicator"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="E_Title" Text="{Binding Path=Title, ElementName=E_This}"/>

        </Grid>
    </Button>
</UserControl>
