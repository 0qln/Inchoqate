<UserControl x:Class="Inchoqate.GUI.Titlebar.ActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inchoqate.GUI.Titlebar"
             mc:Ignorable="d" 
             x:Name="E_This"
             WindowChrome.IsHitTestVisibleInChrome="True"
             Foreground="{DynamicResource Text_1}">
    
    
    
    <Grid Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Path=Height, ElementName=E_This}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="E_Title"
                Content="{Binding Path=Title, ElementName=E_This}"
                WindowChrome.IsHitTestVisibleInChrome="True"
                Click="E_Title_Click"
                Grid.Row="0"/>

        <Canvas x:Name="E_ActionsCanvas"
                Grid.Row="1">

            <Border x:Name="E_ActionsBorder"
                    Background="{DynamicResource Popup_Idle_1}">

                
                <ItemsControl ItemsSource="{Binding Path=Options, ElementName=E_This}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>

            </Border>                 

        </Canvas>

    </Grid>
    
</UserControl>
