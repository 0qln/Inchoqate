<UserControl x:Class="Inchoqate.GUI.Titlebar.ActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inchoqate.GUI.Titlebar"
             mc:Ignorable="d" 
             x:Name="E_This"
             MouseDown="E_This_MouseDown"
             Foreground="{DynamicResource Text_1}">
    
    
    
    <Grid Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Path=Height, ElementName=E_This}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="E_Title"
                   Text="{Binding Path=Title, ElementName=E_This}"
                   Grid.Row="0"/>

        <Canvas x:Name="E_ActionsCanvas"
                Grid.Row="1">

            <Border x:Name="E_ActionsBorder"
                    Background="{DynamicResource Popup_Idle_1}">

                <StackPanel x:Name="E_ActionsStack">

                    <ItemsControl x:Name="E_ItemsControl">
                        
                        <TextBlock Text="Example Action 1"/>
                        <TextBlock Text="Example Action 1 with some longer text"/>

                    </ItemsControl>                    

                </StackPanel>
            
            </Border>                 

        </Canvas>

    </Grid>
    
</UserControl>
