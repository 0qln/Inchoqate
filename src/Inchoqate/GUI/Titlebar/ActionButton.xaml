<UserControl x:Class="Inchoqate.GUI.Titlebar.ActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Inchoqate.GUI.Titlebar"
             mc:Ignorable="d" 
             x:Name="E_This">

    <UserControl.Resources>
        <Style x:Key="K_ButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="{Binding Path=ActualHeight, ElementName=E_This}"/>
            <Setter Property="Width" Value="{Binding Path=ActualHeight, ElementName=E_This}"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Foreground" Value="{Binding Path=Foreground, ElementName=E_This}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border TextBlock.Foreground="{TemplateBinding Foreground}"
                                x:Name="Border"
                                Background="{DynamicResource Background_1}">

                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border"
                                        Property="Background"
                                        Value="{DynamicResource Background_1_Focused}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="5">

        <Grid.RowDefinitions>
            <RowDefinition Height="{Binding Path=Height, ElementName=E_This}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="E_Title"
                Foreground="{Binding Path=Foreground, ElementName=E_This}"
                Background="{Binding Path=Background, ElementName=E_This}"
                BorderBrush="{Binding Path=BorderBrush, ElementName=E_This}"
                Content="{Binding Path=Title, ElementName=E_This}"
                WindowChrome.IsHitTestVisibleInChrome="True"
                PreviewMouseUp="E_Title_Click"
                Grid.Row="0"/>

        <Canvas x:Name="E_ActionsCanvas"
                Grid.Row="1">

            <Border x:Name="E_ActionsBorder"
                    BorderBrush="{DynamicResource Popup_Idle_Contrast_1}"
                    BorderThickness="1">                
                <ItemsControl ItemsSource="{Binding Path=Options, ElementName=E_This}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <!--<ItemsControl.ItemContainerStyle>
                        <Style TargetType="Button">
                            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
                            <Setter Property="Foreground" Value="{Binding Path=Foreground, ElementName=E_This}"/>
                            <Setter Property="Template">
