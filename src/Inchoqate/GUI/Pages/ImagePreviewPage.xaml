<Page x:Class="Inchoqate.GUI.Pages.ImagePreviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:gl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inchoqate.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ImagePreviewPage"
      DataContext="{RelativeSource Mode=Self}">

    <Grid>

        <Border
            x:Name="ImageBorder"
            Background="Tomato">
                
            <gl:GLWpfControl 
                x:Name="ImageControl"
                Render="ImageControl_Render"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
                
        </Border>


    </Grid>
    
</Page>
